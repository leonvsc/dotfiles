#!/bin/bash
set -e

# Setup hosts file
if [ "$(grep -ci "$HOSTNAME" /etc/hosts)" = "0" ]; then
    cat >> /etc/hosts<< EOF
127.0.0.1        localhost
::1              localhost
127.0.1.1        $HOSTNAME
EOF
fi

